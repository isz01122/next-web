{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "app/*": ["app/*"],
      "app.components/*": ["app.components/*"],
      "app.feature/*": ["app.feature/*"],
      "app.hooks/*": ["app.hooks/*"],
      "app.modules/*": ["app.modules/*"],
      "app.store/*": ["app.store/*"],
      "app.styled/*": ["app.styled/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./.next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
